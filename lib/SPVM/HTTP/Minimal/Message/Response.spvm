class HTTP::Minimal::Message::Response extends HTTP::Minimal::Message {
  allow HTTP::Minimal::Socket;
  
  use HTTP::Minimal::Headers;
  
  # Fields
  has protocol : ro string;
  has status : ro string;
  has reason : ro string;
  has headers : ro HTTP::Minimal::Headers;
  has content : ro StringBuffer;
  
  # Class Methods
  static method new : HTTP::Minimal::Message::Response () {
    
    my $self = new HTTP::Minimal::Message::Response;
    
    return $self;
  }
  
  # Instance Methods
  method is_success : int () {
    my $status = $self->{status};
    
    my $success = 0;
    if ($status && $status->[0] == '2') {
      $success = 1;
    }
    
    return $success;
  }
}
