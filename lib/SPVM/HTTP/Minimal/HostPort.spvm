class HTTP::Minimal::HostPort {
  allow HTTP::Minimal;
  allow HTTP::Minimal::Socket;
  
  has host : string;
  has port : int;
  
  static method new : HTTP::Minimal::HostPort ($host : string, $port : int) {
    
    my $self = new HTTP::Minimal::HostPort;
    
    $self->{host} = $host;
    $self->{port} = $port;
    
    return $self;
  }
  
  method to_string : string () {
    my $string = "$self->{host}:$self->{port}";
  }
}
